{
  "name": "resume-optimizer-explainability",
  "version": "0.1.0",
  "description": "An agentic AI system for optimizing resumes with explainable scoring improvements",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && bun run build:copy",
    "build:copy": "copyfiles -u 1 src/**/*.{json,md} dist",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint . --ext .ts,.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "keywords": [
    "resume",
    "optimization",
    "ai",
    "explainability",
    "scoring",
    "ats"
  ],
  "author": "OpenCode AI",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@opencode-ai/sdk": "latest",
    "mammoth": "^1.11.0",
    "pdf-parse": "^2.4.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/pdf-parse": "^1.1.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
